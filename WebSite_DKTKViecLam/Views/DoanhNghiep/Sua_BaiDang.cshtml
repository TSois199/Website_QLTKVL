@model WebSite_DKTKViecLam.Models.BAIDANG

@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/bootstrap/css/Style_QL.css" rel="stylesheet" />
<link href="~/bootstrap/css/StyleSuaBaiDang.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sửa Bài Đăng</title>
</head>
<body style="background-image:url(/Hinh//Background.jpg); background-size:cover; font-size:16px;color:white">
