                    @Html.ValidationSummary()
                </div>
                <div class="col-md-offset-2 col-md-10" style="text-align:center">
                    <input type="submit" value="Lưu" class="button-luu" style=" width: 200px;height:50px" />
                </div>
                <div class="col-md-offset-2 col-md-10" style="text-align:center">
