@{
    ViewBag.Title = "IndexDN";
    Layout = "~/Views/Shared/_LayoutPage_DN.cshtml";
}


@using WebSite_DKTKViecLam.Models
@model List<BAIDANG>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<link href="~/bootstrap/css/Stylehead.css" rel="stylesheet" />
<link href="~/bootstrap/css/Style_QL.css" rel="stylesheet" />
<div class="container">
    <div class="row text-center">
        <span>
            <font face="Verdana"><h2 style="text-align:center"><b>DANH MỤC BÀI ĐĂNG</b></h2></font>
            <div class="search-content-item" style="margin-left:510px">
                <form action="/DoanhNghiep/XL_loadDN" method="post">
                    <input type="text" name="ma" value="@Session["maDN"]" style="display:none">
                    <button type="submit" name="load" >Hiển thị bài đăng</button>
                </form>
            </div>
        </span>
    </div>
    <div>
        <a href="/DoanhNghiep/Them_BaiDang"><input type="button" value="Thêm bài đăng" class="button-them"></a><br/>
    </div>

    <div style="margin-bottom:80px">

    </div>
    <div class="row ">
        <div class="row product-group p-3 bg-light">
            @foreach (var s in Model)
            {

                <div class="col-4 p-3">
                    <div class="card text-center  ">
                        <div style="box-shadow:5px 5px 5px 2px #999999;">
                            <img class="hover-row card-img-top" src="~/HinhAnhBaiDang/@s.LOAICONGVIEC.Anh_Cviec" height="200" />
                            <div class="card-body">
                                <h5 class="card-title text-center">@s.TenBD</h5>
                                <h6 class="card-subtitle mb-1 text-danger text-center"><b>Mức lương :@s.Mucluong</b></h6>
                                <div class="card-text">
                                    <a href="/DoanhNghiep/XemChiTietBaiDang_DN_DaDang/@s.MaBD"><button class="btn btn-danger w-100 mt-3"><img src="~/Hinh/details.png" width="30px" /><b>XEM CHI TIẾT</b></button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>