@model WebSite_DKTKViecLam.Models.NGUOIUNGTUYEN

<!DOCTYPE html>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/bootstrap/css/StyleDangky.css" rel="stylesheet" />
<link href="~/bootstrap/css/App-DangKy.css" rel="stylesheet" />
<link href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangKyUV</title>
    <style>
        .pointer {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-3">
                <h3><a href="/Home/Index" style="color:white"><input type="button" value="Trang Chủ " class="button-trangchu"></a></h3>
            </div>
        </div>
        <div class="row" id="wrapper">
            <form action="/UngVien/DangKyUV" method="post" style="margin-left:600px;" id="form-register-dn-uv">
                <h2 style="text-align:center"><b>Đăng ký trở thành ứng viên</b></h2>
                <h5 style="text-align:center">Chào Mừng Bạn Đến Với Triplet-JS</h5>
                <div class="form-group">
                    <div>Email:</div>
                    <input type="email" class="form-input" id="email" placeholder="Nhập email" name="dkyemailuv" style="width:430px;color:white;">
                </div>
                <div class="form-group">
                    <div>Mật khẩu:</div>
                    <input type="password" class="form-input" id="pwd" placeholder="Nhập mật khẩu" name="dkymatkhauuv" style="width:430px;color:white;">
                    <i id="eye" class="pointer far fa-eye" style="width:25.75px;margin-left:28px" ></i>
                </div>
                <div class="form-group">
                    <div>Xác nhận mật khẩu:</div>
                    <input type="password" class="form-input" id="pwd" placeholder="Nhập lại mật khẩu" name="dkyxacnhanmatkhauuv" style="width:430px;color:white;">
                    <i id="eye1" class="pointer far fa-eye" style="width:25.75px;margin-left:28px"></i>
                </div>
                <div class="form-group">
                    <div>Họ và tên:</div>
                    <input type="text" class="form-input" id="pwd" placeholder="Nhập họ tên" name="dkytenuv" style="width:430px;color:white;" />
                </div>
                <div class="form-group">
                    <div>Địa Chỉ:</div>
                    <input type="text" class="form-input" id="pwd" placeholder="Nhập địa chỉ" name="dkydiachiuv" style="width:430px;color:white;" />
                </div>
                <div class="form-group">
                    <div>Số điện thoại:</div>
                    <input type="text" class="form-input" id="pwd" placeholder="Nhập số điện thoại" name="dkysdtuv" style="width:430px;color:white;" />
                </div>
                <div >
                    <div>Giới tính:</div>
                    <select class="form-control" id="gender" name="dkygioitinhuv">
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
                <div class="form-group">
                    <div>Ngày sinh:</div>
                    <input type="date" class="form-input" id="pwd" placeholder="Nhập Ngày sinh" name="dkyngaysinhuv" style="width:430px;color:white;"/>
                </div>
                <br />
                <div class="col-md-12" style="color:white">
                    @Html.ValidationSummary()
                </div>
                <div>
                    <button type="submit"  class="form-submit" style="color:white;margin-right:300px"><b>Đăng Ký</b></button>
                </div>
                <div>
                    <br />
                    <a style="color:white;"> Nếu có tài khoản thì đăng nhập ở đây! </a>
                    <a href="/UngVien/DangNhapUV"  style="color:white"><input type="button" value="Đăng Nhập" class="DN-dn-uv"></a>
                </div>
            </form>
        </div>
    </div>
    <br />
    <br />
    <br />
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="~/bootstrap/js/App-DK-JS.js"></script>