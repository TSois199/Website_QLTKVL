
@{
    ViewBag.Title = "IndexUngVien";
    Layout = "~/Views/Shared/_LayoutPage_NUT.cshtml";
}
@using WebSite_DKTKViecLam.Models
@model List<BAIDANG>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<link href="~/bootstrap/css/Stylehead.css" rel="stylesheet" />
<div class="container">
    <div class="row text-center">
        <span>
            <font face="Verdana"><h2 style="text-align:center"><b>DANH MỤC BÀI ĐĂNG</b></h2></font>
        </span>
    </div>


    <div class="row ">
        <div class="row product-group p-3 bg-light">
            @foreach (var s in Model)
            {
                if (@s.Trangthai_BD.ToLower() == "chưa duyệt")
                {
                    continue;
                }
                else
                {
                    <div class="col-4 p-3">
                        <div class="card-container text-center">
                            <div class="card">
                                <div style="box-shadow: 5px 5px 5px 2px #999999; height: 500px; position: relative;">
                                    <img class="hover-row card-img-top" src="~/HinhAnhBaiDang/@s.LOAICONGVIEC.Anh_Cviec" height="200" />
                                    <div class="card-body">
                                        <h5 class="card-title text-center"><b>@s.TenBD</b></h5>
                                        <h5 class="card-title text-center"><b>@s.DOANHNGHIEP.TenDN</b></h5>
                                        <br />
                                        <h6 class="card-subtitle mb-1 text-danger text-center"><b>Mức lương :@s.Mucluong</b></h6>
                                    </div>
                                    <div class="card-text">
                                        <a href="/UngVien/XemChiTietBaiDang_UV/@s.MaBD" style="position: absolute; bottom: 5%;right:10%;"><button class="btn btn-danger mt-3" style="width:300px;"><img src="~/Hinh/details.png" width="30px" /><b>XEM CHI TIẾT</b></button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }



            }
        </div>

    </div>
</div>

