@using WebSite_DKTKViecLam.Models;
@model WebSite_DKTKViecLam.Models.LOAICONGVIEC
<!DOCTYPE html>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/bootstrap/css/Style_QL.css" rel="stylesheet" />
<link href="~/bootstrap/css/StyleText.css" rel="stylesheet" />
<html ur;>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>XÓA LOẠI CÔNG VIỆC</title>
</head>
<body style="background-image:url(/Hinh//Background.jpg); background-size:cover;font-size:16px;">
    <div class="container">
        <div class="row" style="margin-top:20%;">
            <h2 class="col-12 text-center glow-text" style="color:white"><b>LOẠI CÔNG VIỆC MUỐN XÓA</b></h2>
            <form action="/Admin/Xoa_LoaiCongViec" method="post" style="max-width:100%;background: rgba(0,0,0,0.8);opacity:0.8;flex-grow:1;padding: 10px 15px 30px 10px;box-shadow: 0px 0px 17px 2px rgba(255, 255, 255, 0.8)  ; " enctype="multipart/form-data">
                <div class="col-12 text-center">
                    <input type="hidden" name="Maloai" value="@Model.Maloai" />
                    <table class="table" border="3" style="color:white">
                        <tr>
                            <th>Mã loại công việc</th>
                            <td>@Model.Maloai</td>
                        </tr>
                        <br />
                        <tr>
                            <th>Tên loại công việc</th>
                            <td>@Model.Tenloai</td>
                        </tr>
                        <tr>
                            <th>Ảnh loại công việc</th>
                            <td><img style="width:150px;height:100px" src="~/HinhAnhBaiDang/@Model.Anh_Cviec" /></td>
                        </tr>
                    </table>
                    <button type="submit" class="btn btn-danger">XÓA</button>
                    <a href="/Admin/QL_CongViec" class="btn btn-dark">CANCEL</a>
                </div>
            </form>
        </div>
</body>
</html>
