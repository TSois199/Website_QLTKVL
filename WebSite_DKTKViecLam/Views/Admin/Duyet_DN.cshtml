@model WebSite_DKTKViecLam.Models.DOANHNGHIEP

@{
    Layout = null;
}

<!DOCTYPE html>
<link href="~/bootstrap/css/Style_QL.css" rel="stylesheet" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Duyệt Doanh Nghiệp</title>
</head>
<body style="background-image:url(/Hinh//Background.jpg); background-size:cover; font-size:16px;color:white">
    @using (Html.BeginForm())
    {
        <div id="Wrapper">
            @Html.AntiForgeryToken()

            <div class="form-horizontal" id="form-luu">
                <center><h1>Bạn Có Chắc Duyệt Không ?</h1></center>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaDN)

                <div class="form-group">
                    <div>Doanh Nghiệp</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenDN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenDN, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                
                <div class="form-group">
                    <div>Trạng Thái</div>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Trangthai_DN, new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Chưa Duyệt", Value = "Chưa Duyệt" },
                            new SelectListItem { Text = "Đã Duyệt", Value = "Đã Duyệt" }
                        },  new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Trangthai_DN, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="checkError">
                    @Html.ValidationSummary()
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Duyệt" class="button-luu " style=" width: 30%;height:30px" />
                    </div>
                </div>
                <br />
                <h3><a href="/Admin/IndexADMIN_DuyetDN" style="color:white;width:200px;height:50px"><input type="button" value="Quay Lại " class="button-quaylai"></a></h3>
            </div>
        </div>
    }
</body>
</html>
