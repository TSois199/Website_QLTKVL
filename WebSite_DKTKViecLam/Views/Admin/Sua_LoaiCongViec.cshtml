    <meta name="viewport" content="width=device-width" />
    <title>Sửa Loại Công Việc</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="form-container">
                <form action="/Admin/Sua_LoaiCongViec" method="post" enctype="multipart/form-data">
                    <h2>SỬA LOẠI CÔNG VIỆC</h2>
                    <div class="form-group">
                        <input type="hidden" value="@Model.Maloai" id="Maloai" name="Maloai" />
                    </div>
                    <div class="form-group">
                        <label for="Tenloai">Tên loại công việc</label>
                        <input type="text" value="@Model.Tenloai" id="Tenloai" name="Tenloai" />
                    </div>
                    <div class="form-group">
                        <input type="file"  id="uploadhinh" name="uploadhinh" accept="image/*" />
                    </div>
                    <button class="btn-luu" type="submit">Lưu</button>
                </form>
            </div>
        </div>
    </div>
</body>
